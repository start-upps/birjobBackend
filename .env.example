# Database Configuration
DATABASE_URL=postgresql+asyncpg://username:password@localhost:5432/birjob_ios

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Security
SECRET_KEY=your-secret-key-change-in-production
API_KEY=your-api-key-change-in-production

# CORS Origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# Apple Push Notifications
APNS_KEY_PATH=/secrets/apns.p8
APNS_KEY_ID=your-apns-key-id
APNS_TEAM_ID=your-team-id
APNS_BUNDLE_ID=com.yourcompany.birjob
APNS_SANDBOX=true

# Background Jobs (Celery)
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Rate Limiting
RATE_LIMIT_ENABLED=true
DEFAULT_RATE_LIMIT=1000 per hour

# Logging
LOG_LEVEL=INFO

# Monitoring
PROMETHEUS_ENABLED=true

# Job Matching Settings
MATCH_ENGINE_INTERVAL_MINUTES=5
MAX_NOTIFICATIONS_PER_HOUR=5
MAX_NOTIFICATIONS_PER_DAY=20
QUIET_HOURS_START=22
QUIET_HOURS_END=8